@{
    ViewBag.Title = "My Movies";

}
@model IEnumerable<IS413_Movie_Web_App_ZS.Models.Add_Movie_Data>;


<div class="text-center">
    <h1>My Movie Collection</h1>
</div>
<div class="text-center">
    <table class="center table table-bordered table-hover table-light">
        <thead>
            <tr>
                <th>Movie Title</th>
                <th>Category</th>
                <th>Year</th>
                <th>Director</th>
                <th>Rating</th>
                <th>Edited</th>
                <th>Lent To</th>
                <th>Notes</th>
            </tr>
        </thead>

        <tbody>

            @foreach (var x in Model)
            {
                <partial name="MovieSummary" model="x" />
            }

        </tbody>
    </table>
</div>